<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/copyright_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                style="@style/normal_btn"
                android:layout_width="150dp"
                android:onClick="onInfoClick"
                android:text="info" />

            <Button
                style="@style/normal_btn"
                android:layout_width="150dp"
                android:onClick="onWarningClick"
                android:text="warning" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                style="@style/normal_btn"
                android:layout_width="150dp"
                android:onClick="onSuccessClick"
                android:text="success" />

            <Button
                style="@style/normal_btn"
                android:layout_width="150dp"
                android:onClick="onErrorClick"
                android:text="error" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                style="@style/normal_btn"
                android:layout_width="150dp"
                android:onClick="onFailClick"
                android:text="fail" />

            <Button
                style="@style/normal_btn"
                android:layout_width="150dp"
                android:onClick="onCompleteClick"
                android:text="complete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                style="@style/normal_btn"
                android:layout_width="150dp"
                android:onClick="onForbidClick"
                android:text="forbid" />

            <Button
                style="@style/normal_btn"
                android:layout_width="150dp"
                android:onClick="onWaitingClick"
                android:text="waiting" />
        </LinearLayout>

        <Button
            style="@style/normal_btn"
            android:onClick="onNextPageClick"
            android:text="下一页" />
    </LinearLayout>
</LinearLayout>
