<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.coder.zzq.smartshowdemo.show.ToastActivity">

    <include layout="@layout/copyright_toolbar" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            style="@style/normal_btn"
            android:layout_width="200dp"
            android:text="type toast(默认)"
            android:onClick="onTypeToastClick"/>
        <Button
            style="@style/normal_btn"
            android:layout_width="200dp"
            android:text="type toast(设置主题色)"
            android:onClick="onColorTypeToastClick"/>

        <Button
            style="@style/normal_btn"
            android:layout_width="200dp"
            android:text="普通 toast"
            android:onClick="onToastClick"/>

        <Button
            style="@style/normal_btn"
            android:layout_width="200dp"
            android:text="普通 toast(设置背景色)"
            android:onClick="onColorToastClick"/>
    </LinearLayout>
</LinearLayout>
